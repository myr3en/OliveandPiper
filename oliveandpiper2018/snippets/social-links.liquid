{% if
	settings.sm_facebook_link != blank or
	settings.sm_twitter_link != blank or
	settings.sm_instagram_link != blank or
	settings.sm_youtube_link != blank or
	settings.sm_vimeo_link != blank or
	settings.sm_flickr_link != blank or
